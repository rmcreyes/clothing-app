            android:src="@drawable/ic_hat_icon"
            android:padding="6dp"/>

        <ImageButton
            android:id="@+id/button2"
            android:layout_gravity="center"
            android:src="@drawable/ic_hat_icon"
            android:padding="6dp"/>

        <ImageButton
            android:id="@+id/button3"
            android:layout_gravity="center"
            android:src="@drawable/ic_hat_icon"
            android:padding="6dp"/>

        <ImageButton
            android:id="@+id/button4"
            android:layout_gravity="center"
            android:src="@drawable/ic_hat_icon"
            android:padding="6dp"/>

        <ImageButton
            android:id="@+id/button5"
            android:layout_gravity="center"
            android:src="@drawable/ic_hat_icon"
            android:padding="6dp"/>

        <ImageButton
            android:id="@+id/button6"
            android:layout_gravity="center"
            android:src="@drawable/ic_hat_icon"
            android:padding="6dp"/>

    </GridLayout>

</FrameLayout>
